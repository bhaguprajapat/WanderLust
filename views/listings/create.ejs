<% layout("layouts/boilerplate") %>
<body>
    <form method="POST" action="/listing" class="row" style="margin:50px">
        <h3>Add new record</h3>
        <div class="col-md-6">
            <label for="exampleFormControlInput1" class="form-label">Title</label>
            <input type="text" class="form-control" name="listing[title]" placeholder="Enter title">
        </div>
        <div class="col-md-6">
            <label for="exampleFormControlTextarea1" class="form-label">Description</label>
            <textarea class="form-control" name="listing[description]" rows="3"></textarea>
        </div>
        <div class="col-md-6">
            <label for="exampleFormControlInput1" class="form-label">Image</label>
            <input type="url" class="form-control" name="listing[img][url]">
        </div>
        <div class="col-md-6">
            <label for="exampleFormControlInput1" class="form-label">Price</label>
            <input type="number" class="form-control" name="listing[price]" placeholder="Enter price">
        </div>
        <div class="col-md-6">
            <label for="exampleFormControlInput1" class="form-label">Location</label>
            <input type="text" class="form-control" name="listing[location]" placeholder="Enter location">
        </div>
        <div class="col-md-6">
            <label for="exampleFormControlInput1" class="form-label">Country</label>
            <input type="text" class="form-control" name="listing[country]" placeholder="Enter country">
        </div>
        <div class="col-md-12">
            </br>
            <button class="btn btn-primary">Add</button>
        </div>
    </form>
</body>
<%- include('../includes/js_footer.ejs') %>