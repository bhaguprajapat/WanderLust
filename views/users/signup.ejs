<% layout("layouts/boilerplate") %>
    <div class="row mt-3">
        <h1  class="col-6 offset-3">SIgnup on Wanderlust</h1>
        <div class="col-6 offset-3">
            <form action="/signUp" method="POST" class="row needs-validation" novalidate style="margin:50px">
                <div class="col-md-6">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control" name="user[username]" placeholder="Enter username" id="username" required>
                    <div class="valid-feedback">
                        Okk
                    </div>
                    <div id="username" class="invalid-feedback">
                        Please Enter username
                    </div>
                </div>
                <div class="col-md-6">
                    <label for="email" class="form-label">Email</label>
                    <input type="text" class="form-control" name="user[email]" placeholder="Enter email" id="email" required>
                    <div class="valid-feedback">
                        Okk
                    </div>
                    <div id="email" class="invalid-feedback">
                        Please Enter email
                    </div>
                </div>
                <div class="col-md-6">
                    <label for="password" class="form-label">Password</label>
                    <input type="passwrod" class="form-control" name="user[password]" placeholder="Enter password" id="password" required>
                    <div class="valid-feedback">
                        Okk
                    </div>
                    <div id="password" class="invalid-feedback">
                        Please Enter password
                    </div>
                </div>
                <div class="col-md-12">
                    </br>
                    <button class="btn btn-dark">Sign Up</button>
                </div>
            </form>
        </div>
    </div>